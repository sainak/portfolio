---
import { getRepositories } from "@api/githubRepoApi"
import type { Repository } from "@api/githubRepoApi"
import ProjectCard from "@components/ProjectCard.astro"

const repos = [
  "sainAk/expensinator",
  "flaam-org/flaam-api",
  "sainAk/ecom",
  "sainAk/martial-arts-sim",
]

let repositories: Repository[] = await getRepositories(repos)
---

<section
  id="projects"
  class="flex w-full min-h-screen flex-col items-center bg-gray-800"
>
  <h2 class="text-2xl md:text-5xl text-white my-10">My Projects</h2>
  <div class="sm:mx-auto max-w-5xl flex items-end">
    <div class="mx-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {repositories.map((repo) => <ProjectCard repo={repo} />)}
    </div>
  </div>
</section>
