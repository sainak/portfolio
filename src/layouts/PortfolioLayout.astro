---
export interface Props {
  title: string
}
const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="This is a portfolio website for Aakash Singh.">
    <meta name="keywords" content="portfolio, web development, developer, django, react, golang, python, typescript">
    <meta name="author" content="Aakash Singh">
    <title>{title}</title>
  </head>
  <body class="h-full">
    <slot />
  </body>
</html>

<style>
  html {
    color-scheme: dark;
    scroll-behavior: smooth;
    @apply h-full;
  }
</style>
